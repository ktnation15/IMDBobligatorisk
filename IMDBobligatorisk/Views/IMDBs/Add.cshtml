@model IMDBobligatorisk.Models.AddIMDBViewModel

<h1>Add IMDB</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Tconst</label>
        <input type="text" class="form-control" asp-for="Tconst" />
    </div>
    <div class="mt-3">
        <label class="form-label">TitleType</label>
        <input type="text" class="form-control" asp-for="TitleType" />
    </div>
    <div class="mt-3">
        <label class="form-label">PrimaryTitle</label>
        <input type="text" class="form-control" asp-for="PrimaryTitle" />
    </div>
    <div class="mt-3">
        <label class="form-label">OriginalTitle</label>
        <input type="text" class="form-control" asp-for="OriginalTitle" />
    </div>
    <div class="mt-3">
        <label class="form-label">IsAdult</label>
        <input type="checkbox" class="form-check-input" asp-for="IsAdult" />
    </div>
    <div class="mt-3">
        <label class="form-label">StartYear</label>
        <input type="number" class="form-control" asp-for="StartYear" />
    </div>
    <div class="mt-3">
        <label class="form-label">EndYear</label>
        <input type="number" class="form-control" asp-for="EndYear" />
    </div>
    <div class="mt-3">
        <label class="form-label">RuntimeMinutes</label>
        <input type="number" class="form-control" asp-for="RuntimeMinutes" />
    </div>
    <div class="mt-3">
        <label class="form-label">Genres</label>
        <input type="text" class="form-control" asp-for="Genres" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
